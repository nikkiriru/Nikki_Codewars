// Build a function that returns an array of integers from n to 1 where n>0.
// Example : n=5 --> [5,4,3,2,1]

func reverseSeq(n: Int) -> [Int] {
    guard n > 0 else {return [0]}
    let range = 1...n
    var array = Array<Int>()
    for number in range {
        array.insert(number, at: 0)
    }
    return array
}
